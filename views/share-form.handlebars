<h1>{{song.name}}</h1>
{{#each song.artists}}
    <h2>{{this.name}}</h2>
{{/each}}
<form class="" action="/share" method="post">
    <div>
        <input type="radio" name="privacy" id="global" value="0">
        <label for="global">Global</label>
    </div>
    <div>
        <input type="radio" name="privacy" id="followers" value="1">
        <label for="followers">Followers</label>
    </div>
    <div>
        <input type="radio" name="privacy" id="private" value="2">
        <label for="private">Private</label>
    </div>
    <label for="mentionID">Mention a User</label>
    <select id="mentionID" name="mentionID">
        <option value=""></option>
        {{#each users}}
            {{#ifEquals this._id ../currentUser._id}}
            {{else}}
                <option value="{{this._id}}">{{this.username}}</option>
            {{/ifEquals}}
        {{/each}}
    </select>

    <input type="text" name="spotifySongID" hidden value="{{song.id}}">
    <button type="submit" name="share">Share</button>
</form>
