<h3>{{user.username}}</h3>
<img src="{{avatar}}" alt="avatar">
{{#ifEquals currentUser._id user._id}}
    <a href="/edit-profile/{{user._id}}">Edit Profile</a>
    {{else}}
        <button class="follow-button" data-user-id="{{user._id}}" type="button"> Follow</button>
{{/ifEquals}}

<h1>What {{user.name}} is Playing</h1>
<div class="feed">
    {{> feed}}
</div>
