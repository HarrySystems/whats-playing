{{#if currentUser}}
    <a href="/edit-profile/{{currentUser._id}}">Edit Profile</a>
    <a href="/logout">Logout</a>
{{else}}
    <a href="/login">Login</a>
    <a href="/signup">Sign Up</a>
{{/if}}

{{#if currentUser}}
    <form action="/search" method="GET">
        <input type="search" autocomplete="off" name="term" class="form-control mr-sm-2" placeholder="Search for Song">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Add Song</button>
    </form>
{{/if}}

<h1>What's Playing</h1>

<h2>Global</h2>
<div class="global-feed feed">
    {{> feed songs=globalSongs}}
</div>
<hr>
<h2>Following</h2>
<div class="following-feed feed">
    {{> feed songs=followingSongs}}
</div>
<hr>
<h2>Personal</h2>
<div class="personal-feed feed">
    {{> feed songs=personalSongs}}
</div>
